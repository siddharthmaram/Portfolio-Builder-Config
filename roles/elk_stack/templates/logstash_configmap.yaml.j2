apiVersion: v1
kind: ConfigMap
metadata:
  name: logstash-config
  namespace: {{ es_namespace }}
  labels:
    k8s-app: logstash
data:
  logstash.yml: |-
    http.host: "0.0.0.0"
    path.config: /usr/share/logstash/pipeline
  
  logstash.conf: |-
    # 1. Receive data
    input {
      beats {
        port => 5044
      }
    }

    # 2. Filter/Process logs
    filter {
      # It replaces the 'decode_json_fields' from Filebeat
      # Check if the message field looks like JSON (starts with {)
      if [message] =~ /^\s*\{/ {
        json {
          source => "message"
          # This tells Logstash to continue processing even if JSON is bad
          skip_on_invalid_json => true
          # Note: Logstash automatically merges keys to root (overwrite_keys behavior)
        }
      }
    }

    # 3. Output to Elasticsearch
    output {
      elasticsearch {
        hosts => ["http://{{ es_service_name }}.{{ es_namespace }}.svc.cluster.local:{{ es_port_http }}"]
        # Use the filebeat index pattern as discussed
        index => "filebeat-%{[agent.version]}-%{+YYYY.MM.dd}" 
      }
    }